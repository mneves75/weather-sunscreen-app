{
  "expo": {
    "name": "weather-suncreen-app",
    "slug": "weather-suncreen-app",
    "version": "3.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "weathersuncreenapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mneves.weather-suncreen-app",
      "infoPlist": {
        "UIBackgroundModes": [
          "fetch",
          "remote-notification",
          "fetch",
          "remote-notification"
        ],
        "NSLocationWhenInUseUsageDescription": "This app uses location to provide weather and UV index information.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses location to provide weather and UV index information.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.WAKE_LOCK",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE"
      ],
      "package": "com.mneves.weather_suncreen_app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "This app uses location to provide weather and UV index information.",
          "locationAlwaysPermission": "This app uses location to provide weather and UV index information.",
          "locationWhenInUsePermission": "This app uses location to provide weather and UV index information.",
          "isIosBackgroundLocationEnabled": false
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#2196F3",
          "sounds": [],
          "mode": "production"
        }
      ],
      "expo-secure-store"
    ],
    "notification": {
      "icon": "./assets/images/icon.png",
      "color": "#2196F3",
      "iosDisplayInForeground": true,
      "androidMode": "default",
      "androidCollapsedTitle": "#{unread_messages_count} new interactions",
      "androidChannelId": "default"
    },
    "buildCacheProvider": "eas",
    "experiments": {
      "typedRoutes": true,
      "autolinkingModuleResolution": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "d39fae61-ef6e-4783-99ef-6773d0503277"
      }
    }
  }
}
