{
  "name": "weather-sunscreen-app",
  "version": "2.0.0",
  "description": "A comprehensive weather and UV index app with sunscreen recommendations",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start --dev-client",
    "web": "expo start --web",
    "android": "JAVA_HOME=/opt/homebrew/opt/openjdk@17/libexec/openjdk.jdk/Contents/Home PATH=/opt/homebrew/opt/openjdk@17/bin:$PATH expo run:android",
    "ios": "node scripts/run-ios.mjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "sync-versions": "node scripts/sync-versions.js",
    "sync-versions:dry": "node scripts/sync-versions.js --dry-run",
    "fix-pods": "scripts/fix-cocoapods.sh",
    "clean-ios": "cd ios && rm -rf Pods/ Podfile.lock build/ && pod install",
    "lint:strict": "eslint \"**/*.{js,jsx}\" --rule no-undef:error"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx}": [
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  },
  "dependencies": {
    "@expo/metro-runtime": "~6.1.1",
    "@expo/vector-icons": "^15.0.2",
    "@hookform/resolvers": "^3.9.0",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-native-community/netinfo": "^11.3.2",
    "@react-navigation/bottom-tabs": "^7.4.0",
    "@react-navigation/native": "^7.1.8",
    "@react-navigation/native-stack": "^7.3.16",
    "@tanstack/react-query": "^5.51.0",
    "expo": "54.0.0-preview.16",
    "expo-asset": "~12.0.7",
    "expo-blur": "~15.0.6",
    "expo-build-properties": "~1.0.7",
    "expo-constants": "~18.0.7",
    "expo-font": "~14.0.7",
    "expo-glass-effect": "^0.1.0",
    "expo-haptics": "~15.0.6",
    "expo-image": "~3.0.7",
    "expo-linear-gradient": "~15.0.6",
    "expo-linking": "~8.0.7",
    "expo-localization": "~17.0.6",
    "expo-location": "~19.0.6",
    "expo-notifications": "~0.32.10",
    "expo-router": "~6.0.0-preview.16",
    "expo-splash-screen": "~31.0.8",
    "expo-status-bar": "~3.0.7",
    "expo-updates": "~29.0.9",
    "i18next": "^25.4.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.53.0",
    "react-i18next": "^15.7.0",
    "react-native": "0.81.4",
    "react-native-edge-to-edge": "^1.6.2",
    "react-native-gesture-handler": "^2.28.0",
    "react-native-reanimated": "~4.1.0",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "^0.21.0",
    "react-native-worklets": "0.5.0",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@react-native-community/cli": "^20.0.1",
    "@react-native-community/cli-platform-ios": "^20.0.1",
    "@react-native/eslint-config": "^0.81.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "~29.5.12",
    "@types/react": "~19.1.10",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "babel-jest": "~29.7.0",
    "bplist-creator": "^0.1.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jest": "~29.7.0",
    "jest-expo": "^54.0.10",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "react-test-renderer": "19.1.0",
    "typescript": "~5.9.2"
  },
  "codegenConfig": {
    "name": "WeatherAppSpecs",
    "type": "modules",
    "jsSrcsDir": "./src/specs",
    "android": {
      "javaPackageName": "com.weatherapp.specs"
    }
  },
  "private": true
}
