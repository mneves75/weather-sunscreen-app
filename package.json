{
  "name": "weather-sunscreen-app",
  "version": "1.0.0",
  "description": "A comprehensive weather and UV index app with sunscreen recommendations",
  "main": "index.ts",
  "scripts": {
    "start": "expo start --dev-client",
    "web": "expo start --web",
    "android": "JAVA_HOME=/opt/homebrew/opt/openjdk@17/libexec/openjdk.jdk/Contents/Home PATH=/opt/homebrew/opt/openjdk@17/bin:$PATH expo run:android",
    "ios": "expo run:ios",
    "sync-versions": "node scripts/sync-versions.js",
    "sync-versions:dry": "node scripts/sync-versions.js --dry-run",
    "fix-pods": "scripts/fix-cocoapods.sh",
    "clean-ios": "cd ios && rm -rf Pods/ Podfile.lock build/ && pod install"
  },
  "dependencies": {
    "@expo/config-plugins": "~11.0.0",
    "@expo/metro-runtime": "~6.1.0",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/bottom-tabs": "^7.4.6",
    "@react-navigation/native": "^7.1.17",
    "@react-navigation/native-stack": "^7.3.25",
    "expo": "54.0.0-preview.4",
    "expo-asset": "~12.0.2",
    "expo-build-properties": "~1.0.3",
    "expo-localization": "~17.0.2",
    "expo-location": "~19.0.2",
    "expo-notifications": "~0.32.2",
    "expo-splash-screen": "~31.0.3",
    "expo-status-bar": "~3.0.3",
    "i18next": "^25.4.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-i18next": "^15.7.0",
    "react-native": "0.81.0",
    "react-native-edge-to-edge": "^1.6.2",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.14.0",
    "react-native-web": "^0.21.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@types/react": "~19.1.10",
    "typescript": "~5.9.2"
  },
  "private": true
}
