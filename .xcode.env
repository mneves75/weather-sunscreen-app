#!/usr/bin/env bash
# Xcode build environment overrides for React Native/Expo
# Ensures PhaseScriptExecution steps can locate Node.

export NODE_BINARY="$(command -v node)"

# Keep path sane for CocoaPods scripts invoking node/npm/npx
export PATH="$HOME/.bun/bin:$HOME/.nvm/versions/node/*/bin:$HOME/.fnm:$HOME/.volta/bin:/opt/homebrew/bin:/usr/local/bin:$PATH"

